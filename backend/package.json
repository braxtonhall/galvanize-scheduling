{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend for galvanize",
  "main": "dist/index.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "build": "rm -rf dist/ && tsc",
    "build-docker": "docker build -t galvanize/backend --file ../Dockerfile_backend ../",
    "run-docker": "docker run --cpus=1 --memory=512mb --memory-swap=512mb -p 8080:8080 galvanize/backend",
    "kill-docker": "docker stop $(docker ps -aq) || true && docker rm $(docker ps -aq) || true",
    "clean-docker": "npm run kill-docker && docker system df && docker rmi $(docker images -q) || true",
    "restart-docker": "npm run build-docker && npm run kill-docker && npm run run-docker"
  },
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/express": "^4.17.1",
    "@types/source-map-support": "^0.5.0",
    "adapter": "file:../adapter",
    "express": "^4.17.1",
    "source-map-support": "^0.5.13",
    "typescript": "^3.6.3"
  }
}
