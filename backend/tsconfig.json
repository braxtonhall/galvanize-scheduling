{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "lib": ["es2017", "es2015", "dom"],
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}